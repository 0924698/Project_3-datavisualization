package main;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.ResultSet;
import java.sql.SQLException;

public class MysqlHelper {
	
	private String databaseUrl;
	private String databaseUser;
	private String databasePass;
	private String tableName;
	
	private Connection conn;
	
	public MysqlHelper(String dbUrl, String dbU, String dbP, String tableName) throws SQLException{
		
        
	}
	
	public MysqlHelper(String databaseUrl, String databaseUser, String databasePass, String tableName) {
		this.databaseUrl = databaseUrl;
		this.databaseUser = databaseUser;
		this.databasePass = databasePass;
		this.tableName = tableName;
		
		String connectionUrl = "jdbc:mysql://localhost:3306/Datavisualisatie?useUnicode=true&characterEncoding=UTF-8&user=" + databaseUser + "&password=" + databasePass;
        conn = DriverManager.getConnection(connectionUrl);
	}

	public String getTables(){
		return doQuery("SHOW TABLES");
	}
	
	public String doQuery(String query){
		String ret = "";
        try {
			ResultSet rs = conn.prepareStatement(query).executeQuery();
			while(rs.next()){
	            ret = rs.getString(1);
	        }
			return ret;
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			ret = e.toString();
			e.printStackTrace();
		}
        
        return ret;
	}
	
	
	
	
	
}
